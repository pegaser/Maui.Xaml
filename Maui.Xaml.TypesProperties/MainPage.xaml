<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Xaml.TypesProperties.MainPage"
             xmlns:mycode ="clr-namespace:Maui.Xaml;assembly=Maui.Xaml">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
                <Label FontSize="42" FontAttributes="Bold,Italic" >
                    <Label.TextColor>AntiqueWhite</Label.TextColor>
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="2"></TapGestureRecognizer>
                    </Label.GestureRecognizers>
                    Click Me
                </Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
